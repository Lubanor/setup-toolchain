# This is i3 config file (v4) which was auto-generated by i3-config-wizard(1)
# Please see  https://i3wm.org/docs/userguide.html  for a complete reference!

# set the mod key
set $mod Mod4

# Font for window titles. Will also be used by the bar, unless otherwise set.
font pango:hack 32px

# misc
title_align center
workspace_layout stacking
default_orientation vertical

# Autostart applications
exec_always --no-startup-id /usr/lib/polkit-gnome/polkit-gnome-authentication-agent-1
exec_always --no-startup-id xrandr --output eDP-1 --mode 1920x1200 --rate 60
exec --no-startup-id nitrogen --restore
exec --no-startup-id xfsettingsd

# Start XDG autostart .desktop files using [dex](https://wiki.archlinux.org/index.php/XDG_Autostart)
exec --no-startup-id dex --autostart --environment i3

# xss-lock grabs a logind suspend inhibit lock and will use i3lock to lock the screen before suspend.
# exec --no-startup-id xss-lock --transfer-sleep-lock -- i3lock --nofork

# apps: NetworkManager (a popular Linux wireless network manager), powermanager, fcitx, etc
exec --no-startup-id nm-applet
exec --no-startup-id pamac-tray
exec --no-startup-id xfce4-power-manager
exec --no-startup-id blueman-applet
exec --no-startup-id fcitx-autostart
exec --no-startup-id volumeicon
exec --no-startup-id dunst
# exec --no-startup-id xfce4-notifyd
exec --no-startup-id xfce4-clipman
# exec --no-startup-id clipit
exec --no-startup-id xfce4-notes
# exec --no-startup-id qv2ray
exec --no-startup-id synapse

# Use pactl to adjust volume in PulseAudio.
set $refresh_i3status killall -SIGUSR1 i3status
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +5%     && $refresh_i3status
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -5%     && $refresh_i3status
bindsym XF86AudioMute        exec --no-startup-id pactl set-sink-mute   @DEFAULT_SINK@ toggle   && $refresh_i3status
bindsym XF86AudioMicMute     exec --no-startup-id pactl set-source-mute @DEFAULT_SOURCE@ toggle && $refresh_i3status

# Screen brightness controls using brightnessctl
bindsym XF86MonBrightnessUp   exec --no-startup-id brightnessctl set 5%+
bindsym XF86MonBrightnessDown exec --no-startup-id brightnessctl set 5%-

# Screenshot using xfce4-screenshooter # -r for region, -f for fullscreen, -w for window
bindsym Print exec --no-startup-id xfce4-screenshooter

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# scratchpad
bindsym $mod+F5       scratchpad show
bindsym $mod+Shift+F5 move scratchpad

# set $editor "alacritty -t 'helix' -e 'helix'"
# launch  # xfce4-appfinder
bindsym $mod+1       exec "rofi -show window"
bindsym $mod+Shift+1 exec "rofi -modi drun,run -show run"

# start an app or switch to it # chrome is very power consuming
bindsym $mod+2     [class="(?i)firefox"] focus
bindsym $mod+3     [class="(?i)code"] focus
bindsym $mod+4     [class="(?i)doublecmd"] focus
bindsym $mod+5     [class="(?i)xfce4-terminal"] focus
bindsym $mod+Return [class="(?i)xfce4-terminal"] focus
# ---
bindsym $mod+Shift+2     exec firefox
bindsym $mod+Shift+3     exec code
bindsym $mod+Shift+4     exec doublecmd
bindsym $mod+Shift+5     exec xfce4-terminal
bindsym $mod+Shift+Return exec xfce4-terminal

# switch task
bindsym $mod+Tab       exec "rofi -show window"
bindsym $mod+Shift+Tab exec "rofi -show window"
bindsym Mod1+Tab       focus next
bindsym Mod1+Shift+Tab focus prev

# enter fullscreen mode for the focused container // entire
bindsym $mod+e fullscreen toggle
# change container layout (stacked, tabbed, arrange=split_toggle)
bindsym $mod+s layout stacking
bindsym $mod+t layout tabbed
bindsym $mod+a layout toggle split

# enter the resize mode
bindsym $mod+q mode "quantify"
bindsym $mod+w mode "watch"
bindsym $mod+d mode "do"

# toggle tiling / floating
bindsym $mod+f floating toggle

# start a program launcher // eXec
bindsym $mod+x exec "rofi -modi drun,run -show run"
bindsym $mod+Shift+x exec synapse

# kill focused window // close
bindsym $mod+c exec i3-input -F '%s' -P 'commands> ' -f '-*-terminus-bold-*-normal-*-30-*-*-*-*-*-*-*'
bindsym $mod+Shift+c kill

# set the current working dir. unsupported // zone / zag
# bindsym $mod+z exec i3-input -F 'mark %s' -P 'Zonemark> ' -f '-*-terminus-bold-*-normal-*-30-*-*-*-*-*-*-*'
bindsym $mod+z mark Z
bindsym $mod+Shift+z swap container with mark Z

# split in vertical/horizontal orientation // vertical
bindsym $mod+v split v
bindsym $mod+Shift+v split h

# change focus between tiling / floating windows
bindsym $mod+space layout toggle
bindsym $mod+Shift+space focus mode_toggle

# focus the parent container // mother
bindsym $mod+m focus parent
bindsym $mod+Control+Up focus parent

# focus the child container // baby
bindsym $mod+b focus child
bindsym $mod+Control+Down focus child

# change focus
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

bindsym $mod+Left  focus left
bindsym $mod+Down  focus down
bindsym $mod+Up    focus up
bindsym $mod+Right focus right

# move focused window
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

bindsym $mod+Shift+Left  move left
bindsym $mod+Shift+Down  move down
bindsym $mod+Shift+Up    move up
bindsym $mod+Shift+Right move right

# Define names for default workspaces for which we configure key bindings later on.
# We use variables to avoid repeating the names in multiple places. // no benifits
set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"

# switch to workspace
bindsym $mod+n workspace number $ws1
bindsym $mod+i workspace number $ws2
bindsym $mod+o workspace number $ws3
bindsym $mod+u workspace number $ws4
# ---
bindsym $mod+F1 workspace number $ws1
bindsym $mod+F2 workspace number $ws2
bindsym $mod+F3 workspace number $ws3
bindsym $mod+F4 workspace number $ws4

# move focused container to workspace
bindsym $mod+Shift+n move container to workspace number $ws1
bindsym $mod+Shift+i move container to workspace number $ws2
bindsym $mod+Shift+o move container to workspace number $ws3
bindsym $mod+Shift+u move container to workspace number $ws4
# ---
bindsym $mod+Shift+F1 move container to workspace number $ws1
bindsym $mod+Shift+F2 move container to workspace number $ws2
bindsym $mod+Shift+F3 move container to workspace number $ws3
bindsym $mod+Shift+F4 move container to workspace number $ws4

# alternatively
bindsym $mod+Control+Left  workspace prev
bindsym $mod+Control+Right workspace next
bindsym $mod+Control+Shift+Left  move container to workspace prev
bindsym $mod+Control+Shift+Right move container to workspace next

# put workspaces on specific screens. see available outputs by running xrandr --listmonitors
#workspace $ws1 output LVDS1
#workspace $ws2 output LVDS2
#workspace $ws3 output LVDS3
#workspace $ws4 output LVDS4

bindsym $mod+y focus output left
bindsym $mod+g focus output down
bindsym $mod+r focus output up
bindsym $mod+p focus output right

bindsym $mod+Shift+y move container to output left
bindsym $mod+Shift+g move container to output down
bindsym $mod+Shift+r move container to output up
bindsym $mod+Shift+p move container to output right

# exit // no reload/restart hotkeys --- run `i3 reload/restart` commands in shell, instead.
bindsym $mod+Shift+Escape exec "i3-nagbar -t warning -m 'End your i3 session?' -B 'Yes, exit i3wm' 'i3-msg exit'"
bindsym $mod+Escape exec i3lock

# resize window (you can also use the mouse for that)
mode "quantify" {
    bindsym h resize shrink width 10 px or 10 ppt
    bindsym j resize grow height 10 px or 10 ppt
    bindsym k resize shrink height 10 px or 10 ppt
    bindsym l resize grow width 10 px or 10 ppt

    bindsym Left resize shrink width 10 px or 10 ppt
    bindsym Down resize grow height 10 px or 10 ppt
    bindsym Up resize shrink height 10 px or 10 ppt
    bindsym Right resize grow width 10 px or 10 ppt

    bindsym Return mode "default"
    bindsym Escape mode "default"
    bindsym $mod+q mode "default"
}

# launch
mode "watch" {
    bindsym w [class="(?i)firefox"] focus; mode "default"
    bindsym e [class="(?i)code"] focus; mode "default"
    bindsym f [class="(?i)doublecmd"] focus; mode "default"
    bindsym t [class="(?i)xfce4-terminal"] focus; mode "default"

    bindsym 2 [class="(?i)firefox"] focus; mode "default"
    bindsym 3 [class="(?i)code"] focus; mode "default"
    bindsym 4 [class="(?i)doublecmd"] focus; mode "default"
    bindsym 5 [class="(?i)xfce4-terminal"] focus; mode "default"

    bindsym Escape mode "default"
    bindsym Return mode "default"
    bindsym $mod+w mode "default"
}

# jumpto
mode "do" {
    bindsym w exec firefox; mode "default"
    bindsym e exec code; mode "default"
    bindsym f exec doublecmd; mode "default"
    bindsym t exec xfce4-terminal; mode "default"

    bindsym 2 exec firefox; mode "default"
    bindsym 3 exec code; mode "default"
    bindsym 4 exec doublecmd; mode "default"
    bindsym 5 exec xfce4-terminal; mode "default"

    bindsym Escape mode "default"
    bindsym Return mode "default"
    bindsym $mod+d mode "default"
}

# for_window [class="aaa" title="bbb" instance="ccc"] ...
no_focus [window_role="pop-up"]
for_window [window_role="About"] floating enable

# Start i3bar to display a workspace bar (plus the system information it finds out)
bar {
    status_command i3blocks
    font pango:hack 36px
    position bottom
}
